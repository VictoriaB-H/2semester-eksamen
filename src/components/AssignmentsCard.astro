---
// AssignmentsCard.astro
const { overskrift, beskrivelse, link, readmore } = Astro.props;

// Skip rendering if required props are missing
if (!overskrift || !beskrivelse || !readmore) {
  return null;
}
---

<article class="card">
  <h4>{overskrift}</h4>
  <p class="beskrivelse">{beskrivelse}</p>
  <details>
    <summary class="readmore">+ {readmore}</summary>
    <div class="goder-text">
      Partout festivalarmb√•nd. 4x drinksbilletter. Invitation til frivilligfest.
      En mega sjov og fed tid sammen med andre frivillige
    </div>
  </details>
</article>

<style>
  .card {
    border: 1px solid white;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 280px;
  }
  h3 {
    text-align: center;
  }

  .beskrivelse {
    font-size: 1rem;
    line-height: 1.5;
    margin: 0 0 1.5rem 0;
  }

  details {
    border-top: 1px solid white;
    padding-top: 1rem;
    cursor: pointer;
  }

  summary {
    font-size: 1.2rem;
    list-style: none;
    outline: none;
  }

  .goder-text {
    margin-top: 1rem;
    font-size: 0.95rem;
  }
  .readmore {
    font-family: owners-text, sans-serif;
  }
  summary {
    font-size: 1.2rem;
    list-style: none;
    outline: none;
    color: white;
    transition: color 0.2s ease;
    cursor: pointer;
  }

  summary:hover {
    color: #fffa3c; /* GUL */
  }
</style>
