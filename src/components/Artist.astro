---
const { artists } = Astro.props;
---

<a class="artist-card" data-artist={JSON.stringify(artists)}>
  <article>
    <img src={"img/" + artists.image} alt={artists.name} />
    <h3>{artists.name}</h3>
  </article>
</a>

<style>
  h3 {
    margin-top: 15px;
    margin-bottom: 0;
    transition: color 0.3s ease;
  }

  h3:hover {
    color: #fffa3c;
  }
  .artist-card {
    text-align: center;
  }

  .artist-card img {
    width: 100%;
    margin-bottom: -20px;
  }
</style>
